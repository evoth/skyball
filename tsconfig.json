{
  "compilerOptions": {
    "outDir": "src",
    "noImplicitAny": true,
    "target": "ES2022",
    "module": "ES2022",
    "allowJs": true,
    "types": [ "node" ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "strict": false,
    "strictPropertyInitialization": false,
  },
}